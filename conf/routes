# Routes

# Home page
GET     /                           controllers.Application.board
GET     /m                          controllers.Application.mobileStart
GET     /control/:username          controllers.Application.controller(username)
GET     /res/:username/:color       controllers.Application.resultat(username,color)
POST    /addP/:username/:color      controllers.Application.addNewPlayer(username, color)
POST    /dropP/:username            controllers.Application.dropPlayer(username)
POST    /addPnt/:username/:point    controllers.Application.addPoint(username, point)
POST    /lostL/:username/:point     controllers.Application.lostLife(username, point)
POST    /addB/:x/:y/:a/:name        controllers.Application.addBullet(x,y,a,name)
POST    /mvB                        controllers.Application.moveBullet()
POST    /dropB/:id                  controllers.Application.dropBullet(id)
POST    /mvP/:username/:x/:y/:a     controllers.Application.movePlayer(username, x, y, a)
POST    /clear                      controllers.Application.clearGame()
GET     /source                     controllers.Application.source()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)