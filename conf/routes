# Routes

# Home page
GET     /                           controllers.Application.board
GET     /m                          controllers.Application.mobileStart
GET     /control/:id                controllers.Application.controller(id)
GET     /res/:username/:color       controllers.Application.resultat(username,color)
GET     /source                     controllers.Application.source()
GET     /getState                   controllers.Application.getState()

# Websocket endpoints
GET     /echo                       controllers.Application.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)