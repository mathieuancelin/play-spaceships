# Routes

# Home page
GET     /                           controllers.Application.board
GET     /m                          controllers.Application.mobileStart
GET     /control/:username          controllers.Application.controller(username)
POST    /addP/:username             controllers.Application.addNewPlayer(username)
POST    /dropP/:username            controllers.Application.dropPlayer(username)
POST    /clear                      controllers.Application.clearGame()

# Return content
GET     /getP                       controllers.Application.getPlayer
GET     /getL                       controllers.Application.getLeaderboard

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)